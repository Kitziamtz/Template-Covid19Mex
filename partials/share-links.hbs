<div class="share-wrap clearfix text-center">
    <div class="share-text h4">{{t "Comparte este art√≠culo en:"}}</div>
    <ul class="share-links">
        <!-- facebook -->
        <li>
            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;" title="Comparte en Facebook">{{> icons/facebook}} {{t "Facebook"}}</a>
        </li>
        <!-- twitter -->
        <li>
             <a class="pinterest" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'linkedin-share', 'width=580,height=296');return false;" title="Comparte en Pinterest">{{> icons/pinterest}} {{t "Pinterest"}}</a>
        </li>   
        <!-- linkedin -->
        <li>
            <a class="linkedin" href="http://www.linkedin.com/shareArticle?mini=true&url={{url bsolute="true"}}&title={{encode title}}" onclick="window.open(this.href, 'linkedin-share', 'width=580,height=296');return false;" title="Comparte en Linkedin">{{> icons/linkedin}} {{t "Linkedin"}}</a>
        </li>
        <!-- pinterest -->
        <li>
            <a class="pinterest" href="http://pinterest.com/pin/create/button/?url={{url absolute="true"}}&description={{encode title}}" onclick="window.open(this.href, 'linkedin-share', 'width=580,height=296');return false;" title="Comparte en Pinterest">{{> icons/pinterest}} {{t "Pinterest"}}</a>
        </li>
    </ul>
</div>
